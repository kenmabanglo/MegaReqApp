<app-request-form #reqForm
    [requestTypes]="request_types" 
    [selectedSupplier]="selectedSupplier"
    [selectedItemCode]="selectedItemCode"
    [selectedApprover]="selectedApprover"
    [addedSerialNo]="addedSerialNo"
    [errorMsg]="error"
    [successMsg]="success"
    [isSaving]="isSaving"

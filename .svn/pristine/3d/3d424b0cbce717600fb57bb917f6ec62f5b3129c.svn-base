<div class="modal-container">
    
    <div class="mat-dialog-header">
        <h2 mat-dialog-title>
            <span><mat-icon>attach_file</mat-icon></span>
        </h2>
 
        <button mat-icon-button class="close-modal" mat-dialog-close>
            <mat-icon>close</mat-icon>
        </button>
    </div>

<mat-dialog-content> 

        <!-- <img *ngIf="type == 'image'" [src]="imageBlobUrl"> -->
        <img *ngIf="type == 'image'" [src]="imageBlobUrl2">

        <div *ngIf="type == 'pdf'" style="height: 100vh; " > 
            <pdf-viewer [src]="src"
                        [render-text]="true"
                        [original-size]="false"
                        style="width: 100%; height: 100%"
                        [render-text-mode]="0"
                        [zoom]="1"
                        [zoom-scale]=""
            ></pdf-viewer>
        </div>

</mat-dialog-content>

</div>
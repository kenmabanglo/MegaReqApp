.upload-container {
    margin-bottom: 15px;
    flex: 1 1 100%;
    box-sizing: border-box;
    max-width: 100%;
    flex-direction: row;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 10px;
    padding: 2px !important;
  
    .upload {
      font-weight:bold;
      color:#28a745;
      margin-left: 15px;
      line-height: 36px;
    }
    .processing {
      display: flex;
      align-content: center;
      justify-content: space-evenly;
      align-items: center;
      flex-wrap: nowrap;
      flex-direction: row;
  
    }
  
    .image-container {
      display: flex;
      flex-direction: column;
      height: 100%;
      align-items: center;
      align-content: flex-start;
      width: 100%;
      justify-content: space-between;
    
  
      .mt-progress-bar {
        height: 50px;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        width: 100%;
        margin-top: 10px;
        border-radius: 10px;
        position: relative;
  
        .percent {
          position: absolute;
          top: 0.3em;
          left: 0%;
          color: #ffffff;
          font-size: 12px;
        }
      } 
      .mat-progress-bar {
        border-radius: 6px;
        height: 1.5em;
      } 
      
      .inline-buttons {
        margin-top: auto;
        width: 100%;
        height: 20%;
        vertical-align: bottom;
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        align-items: flex-end;
        align-content: flex-end;
        justify-content: center;
       
  
        & > button {
          margin: 5px;
          flex: 1 1 auto;
        }
      }
  
      #preview-attachments {
        text-align: center;
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-content: flex-start;
        justify-content: flex-start;
        height: 80%;
        border: 1px solid #9e9e9e87;
        border-radius: 5px;
        overflow-y: scroll;

        span { 
          width: 100%;
          flex: auto;
          background: #3f51b5;
          color: white;
        }
    
       .attachments-list {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        align-items: flex-start;
       }
       mat-selection-list {
        width: 100%;
        text-align: left;
       }

       .deleteFile {
          cursor: pointer;
          margin: -7px 3px;
          float: right;
          color: #f44336;
          vertical-align: top !important;
       }
    
     
      } 
    }
  
    @media screen and (max-width: 400px){
      .hide-mobile {display: none;}
    }
   
    @media screen  and (min-width: 767px ){
        .image-container {
          height: 60vh !important;
        }
    }
  }
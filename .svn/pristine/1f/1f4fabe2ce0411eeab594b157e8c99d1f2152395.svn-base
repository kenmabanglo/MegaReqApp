.print-wrapper { 
    margin: 0 auto;
    background: white;
    width: 100% !important;

    section#request-title {
        display:  flex !important;
        margin-top:-15px;
    }

    h3,h4,h5,h6 {
        margin: 0 !important;
    }
     
    .logo-img {
        width: 80px;
        height: 45px;
        background: url('/assets/img/megasaver-logo_print.png') left no-repeat;
        background-size: contain;
    } 
    table.table-bordered { 
        border-spacing: 0 !important;
        table-layout: fixed;

        th,td {
            width: 50%;
            text-align: left;
            border: 1px solid #9e9e9e;
            font-size:0.8em;
        }
    }
    tfoot td {
        vertical-align: middle;
    }
    div.approvers {
        margin-top:10px !important;

        tr:first-of-type {
            height: 35px
        }
    }
    table#rfs-tb {
        width: 100%;
        font-size: 0.9em;
        text-align: center;
        border-spacing: 0px; 
        border-width: 0 1px 1px 0;
        border-style: solid;
        border-color: #9e9e9e;
        //height:380px; max-height: 380px;

        .items {
            // max-height: 396px;
            // height: 396px;
            vertical-align: top;
        }
        td.number, th.number {
            text-align: right;
            padding-right: 5px;
        }
        tr {
            line-height: 16px;
            box-sizing: border-box;
            height: 35px;
        }
        td, th {
            border-width: 1px 0px 0px 1px;
            border-style: solid;
            border-color: #9e9e9e;
            border-spacing: 0 !important;
            overflow: hidden !important; 
            box-sizing: border-box;
            line-height: 16px;
            box-sizing: border-box;
            height: 35px;
            // width: 120px; 
        }
        
        td:empty {
            padding: 8px;
            width: 11%;
        } 
    
        td.td-description, td.remarks { 
            overflow: hidden;
            text-overflow: ellipsis;
            -webkit-box-orient: vertical; 
            -webkit-line-clamp: 2;
            line-clamp: 2;
            width: 33%; 
            height: 35px !important;
        }  
        td:not(.cell){
            width: 11%;
            box-sizing: border-box;
        }
                
        tbody > tr:nth-of-type(odd) {
            background: aliceblue;
        }
        thead > tr:not(.no-highlight), tr.highlight {
            background: #3f51b5;
            color: white;
        }
        td, tr.highlight th, tr.no-highlight th {
            text-align: left; padding-left:10px;
        }
    
        td {
            font-size: 0.9em;
            vertical-align: top; 
        } 

        span.ellipsis {
            position: absolute;
            left: 0;
            right: 0;
            white-space: wrap;
            overflow: hidden;
            text-overflow: ellipsis;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            box-sizing: border-box;
            height: 35px;
        }
        
        td.cell { 
            position: relative;
        }

        h4 {margin:0 !important;}
        .textarea {height: 80px;}
    }
}       
  
@media screen and (min-width: 800px) {
    .print-preview-request {
        border: 1px solid #e0e0e0 !important;
        padding: 20px !important;
        border-radius: 10px !important;
    }
} 

@media print {
    body {
        print-color-adjust:exact !important;
        -webkit-print-color-adjust: exact !important;
    }
    .loading {display: none;} 

    .print-wrapper { 
        margin: unset !important;
        left:0 !important;

        section#company-details,
        section#request-title {
            display:  flex !important;
        }
         
        thead > tr {
            background: unset !important;
            color: unset !important;
        }
        .sign {
            border-bottom: 1px solid #e0e0e0;
            width: 100%;
            padding-left: 10px; 
          }
        
    }
    tr {
        background: unset !important;
    }
}
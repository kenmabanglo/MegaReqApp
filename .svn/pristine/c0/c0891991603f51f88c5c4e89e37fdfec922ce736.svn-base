:host {
  margin: 50px auto;
}
.loading-container {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: center;
}
  
.loader {
    width: 48px;
    height: 48px;
    display: inline-block;
    position: relative;
    border: 4px solid #35251C;
    box-sizing: border-box;
    animation: fill 2s linear infinite alternate; 
    color: #C46C30;
    // border-radius: 8px 8px 17px 17px;
    border-radius: 5px 5px 5px 5px;
  }
  .loader::after {
    content: '';  
    box-sizing: border-box;
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 4px solid #35251C;
    width: 20px;
    height: 25px;
    border-radius: 0 12px 12px 0;
  }
  
  @keyframes fill {
    0% {
      box-shadow: 0 0  inset;
    }
    100% {
      box-shadow: 0 -48px inset;
    }
  } 
  
    .loading {
      color: #3f51b5;
      display: inline-block;
      position: relative;
      font-size: 25px;
      font-family:  "Russo One","Helvetica Neue",Helvetica,sans-serif;
      box-sizing: border-box; 
    }
   
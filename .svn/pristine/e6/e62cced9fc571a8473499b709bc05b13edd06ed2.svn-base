:host {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.auth-container {
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin: 0 5;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
}
button.contact-us { 
  color: white !important;
  margin-right:2px;
  &.viber {
    background: #3f51b5 !important;
  }
  &.call {
    background: #fa607e !important;
  }
} 
body:not(.purple-theme) .auth-container.light-bg {
  background-color: #efeef1 !important;
}
.auth-container.dark-bg {
  background-color: #303F9F !important;
}
.auth-container > div {
  width:50%;
  text-align: right;
}
